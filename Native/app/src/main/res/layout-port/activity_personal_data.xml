<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PersonalDataActivity" android:padding="@dimen/padding">
    <LinearLayout
        android:layout_marginTop="@dimen/dp20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/grayft"
            android:textSize="@dimen/h7"
            android:text="@string/zhanghu"
            android:layout_marginLeft="10dp" />

        <EditText
            android:layout_weight="1"
            android:id="@+id/account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text=""
            android:hint="@string/qszhm"
            android:enabled="false"
            android:textSize="@dimen/h7"
            android:gravity="center_vertical|right"
            android:background="@null"
            android:maxLines="1"
            android:maxLength="40"
            android:layout_marginLeft="10dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/dp20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/grayft"
            android:textSize="@dimen/h7"
            android:text="@string/name"
            android:layout_marginLeft="10dp" />

        <EditText
            android:layout_weight="1"
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text=""
            android:hint="@string/qsxm"
            android:textSize="@dimen/h7"
            android:gravity="center_vertical|right"
            android:background="@null"
            android:maxLines="1"
            android:maxLength="40"
            android:layout_marginLeft="10dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp20"
        android:layout_height="wrap_content" android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/grayft"
            android:textSize="@dimen/h7"
            android:text="@string/phone"
            android:layout_marginLeft="10dp" />

        <EditText
            android:layout_weight="1"
            android:id="@+id/mobile"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text=""
            android:gravity="center_vertical|right"
            android:maxLength="40"
            android:maxLines="1"
            android:hint="@string/qshm"
            android:textSize="@dimen/h7"
            android:layout_marginLeft="10dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp20"
        android:layout_height="wrap_content" android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/grayft"
            android:textSize="@dimen/h7"
            android:text="@string/yx"
            android:layout_marginLeft="10dp" />

        <EditText
            android:layout_weight="1"
            android:id="@+id/email"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text=""
            android:gravity="center_vertical|right"
            android:maxLength="40"
            android:maxLines="1"
            android:hint="@string/qsyx"
            android:textSize="@dimen/h7"
            android:layout_marginLeft="10dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp20"
        android:layout_height="wrap_content" android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/grayft"
            android:textSize="@dimen/h7"
            android:text="@string/dz"
            android:layout_marginLeft="10dp" />

        <EditText
            android:layout_weight="1"
            android:id="@+id/address"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text=""
            android:gravity="center_vertical|right"
            android:maxLength="40"
            android:maxLines="1"
            android:hint="@string/qsdz"
            android:textSize="@dimen/h7"
            android:layout_marginLeft="10dp" />
    </LinearLayout>
    <TextView
        android:layout_marginTop="@dimen/dp20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/grayft"
        android:textSize="@dimen/h7"
        android:text="@string/wxts"
        android:layout_marginLeft="10dp" />

    <Button
        android:id="@+id/update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:padding="@dimen/padding"
        android:textSize="@dimen/h7" android:background="@color/primary"
        android:text="@string/ok"
        android:textColor="@color/white"
        android:layout_marginTop="50dp" ></Button>
</LinearLayout>