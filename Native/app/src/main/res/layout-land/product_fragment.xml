<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.product.ProductFragment"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/padding">

        <TextView android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/shuhao"
            android:background="@color/gray"
            android:textColor="@color/grayft"
            android:padding="@dimen/dp10"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <LinearLayout
                android:id="@+id/p1"
                android:padding="@dimen/dp10"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="150dp"
                android:layout_height="wrap_content" android:background="@drawable/shape_corner">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/p1img"
                    android:scaleType="centerCrop"
                    android:layout_width="64dp"
                    android:layout_height="100dp">
                </com.facebook.drawee.view.SimpleDraweeView>
                <TextView
                    android:gravity="center"
                    android:id="@+id/p1text"
                    android:layout_marginTop="@dimen/dp10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="30dp"
                android:layout_height="wrap_content"></LinearLayout>
            <LinearLayout
                android:id="@+id/p2"
                android:padding="@dimen/dp10"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="150dp"
                android:layout_height="wrap_content" android:background="@drawable/shape_corner">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/p2img"
                    android:layout_width="64dp"
                    android:layout_height="100dp">
                </com.facebook.drawee.view.SimpleDraweeView>
                <TextView
                    android:gravity="center"
                    android:id="@+id/p2text"
                    android:layout_marginTop="@dimen/dp10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="30dp"
                android:layout_height="wrap_content"></LinearLayout>
            <LinearLayout
                android:id="@+id/p3"
                android:padding="@dimen/dp10"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="150dp"
                android:layout_height="wrap_content" android:background="@drawable/shape_corner">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/p3img"
                    android:scaleType="centerCrop"
                    android:layout_width="64dp"
                    android:layout_height="100dp">
                </com.facebook.drawee.view.SimpleDraweeView>
                <TextView
                    android:gravity="center"
                    android:id="@+id/p3text"
                    android:layout_marginTop="@dimen/dp10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="30dp"
                android:layout_height="wrap_content"></LinearLayout>
            <LinearLayout
                android:id="@+id/p4"
                android:layout_weight="1"
                android:padding="@dimen/dp10"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="150dp"
                android:layout_height="wrap_content" android:background="@drawable/shape_corner">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/p4img"
                    android:scaleType="centerCrop"
                    android:layout_width="64dp"
                    android:layout_height="100dp">
                </com.facebook.drawee.view.SimpleDraweeView>
                <TextView
                    android:id="@+id/p4text"
                    android:layout_marginTop="@dimen/dp10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>