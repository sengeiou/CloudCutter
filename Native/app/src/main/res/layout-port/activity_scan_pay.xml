<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScanPayActivity"
    android:orientation="vertical"
    android:gravity="center"
    tools:ignore="MissingDefaultResource">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/paycode"
        android:layout_width="300dp"
        android:layout_height="300dp"></com.facebook.drawee.view.SimpleDraweeView>
    <TextView
        android:textSize="@dimen/h7"
        android:id="@+id/account_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp20"
        ></TextView>
    <LinearLayout
        android:layout_marginTop="@dimen/dp20"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/grayft"
            android:text="@string/amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
        <TextView
            android:textColor="@color/grayft"
            android:text="："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
        <TextView
            android:textSize="@dimen/h7"
            android:id="@+id/price"
            android:text="¥"
            android:textColor="@color/red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/primary"
        android:text="@string/scanpay"
        android:layout_marginTop="@dimen/dp20"
        ></TextView>
</LinearLayout>